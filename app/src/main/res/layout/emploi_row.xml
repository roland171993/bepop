<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_selector"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.font.RobotoTextView
        android:id="@+id/titleTextId"
        style="@style/TextViewAppearance.Headline3"
        android:text="CONSULTANT(E) FORMATEUR"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true" />

    <com.font.RobotoTextView
        android:id="@+id/cityTextId"
        style="@style/TextViewAppearance.Caption2"
        android:text="Oume"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="5dp"
        android:maxLength="16"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/titleTextId"
        android:textSize="@dimen/item_font_size" />

    <com.font.RobotoTextView
        android:id="@+id/salairyId"
        style="@style/TextViewAppearance.Caption2"
        android:textSize="@dimen/item_font_size"
        android:text="150 000 fcfa"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/titleTextId" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayoutId"
        android:layout_below="@+id/titleTextId"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconId"
            android:src="@drawable/ic_main_calendar"
            android:layout_width="18dp"
            android:layout_height="18dp" />

        <com.font.RobotoTextView
            android:id="@+id/endDateId"
            style="@style/TextViewAppearance.Caption2"
            android:layout_marginLeft="10dp"
            android:text="31/07/2017"
            android:textStyle="italic"
            />

    </LinearLayout>




</RelativeLayout>